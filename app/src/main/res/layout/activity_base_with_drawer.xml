<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <!-- The main content view -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>
    <!-- The navigation drawer -->



    <ScrollView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:fitsSystemWindows="true">


            <LinearLayout
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#3b4371"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/im"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/azam_market_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="32dp"
                        android:layout_toRightOf="@id/im"
                        android:text="Azam Market"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:background="#3b4371"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="sara@tatasteels.com"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/reverseTriangleImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="19dp"
                        android:padding="8dp"
                        android:layout_toRightOf="@id/txt"
                        android:clickable="true"
                        android:src="@drawable/triangle_first"
                        android:visibility="gone"/>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/triangleImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="19dp"
                        android:padding="8dp"
                        android:layout_toRightOf="@id/txt"
                        android:clickable="true"
                        android:src="@drawable/triangle"
                        />



                </RelativeLayout>

        <LinearLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:showDividers="middle">

        </LinearLayout>
            </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>